                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Vaka Sayısı"
                            style="@style/covidrow1" />
                        <TextView
                            android:id="@+id/totalcasenumber"
                            android:text="2.150.000"
                            style="@style/covidrow2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Vefat Sayısı"
                            style="@style/covidrow1" />
                        <TextView
                            android:id="@+id/totaldiednumber"
                            android:text="28.022"
                            style="@style/covidrow2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Ağır Hasta"
                            style="@style/covidrow1" />
                        <TextView
                            android:id="@+id/heavypatientnumber"
                            android:text="1.569"
                            style="@style/covidrow2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="İyileşen Sayısı"
                            style="@style/covidrow1" />
                        <TextView
                            android:id="@+id/totalhealingnumber"
                            android:text="2.645.896"
                            style="@style/covidrow2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/headers"
                android:text="Döviz"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/currencysheader"
                        android:text="Ad" />
                    <TextView
                        style="@style/currencysheader"
                        android:text="Alış" />
                    <TextView
                        style="@style/currencysheader"
                        android:text="Satış" />
                    <TextView
                        style="@style/currencysheader"
                        android:text="Değişim" />

                </LinearLayout>
                <TextView
                    style="@style/headers"
                    android:text="Altın"
                    android:textSize="25sp"
                    android:layout_marginHorizontal="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goldname1"
                        style="@style/currencysrowheader"
                        android:text="Gram"
                        />
                    <TextView
                        android:id="@+id/goldpurchaseprice1"
                        style="@style/currencysrowprices"
                        android:text="407,85"

                        />
                    <TextView
                        android:id="@+id/goldsaleprice1"
                        style="@style/currencysrowprices"
                        android:text="1.350,20"



                        />
                    <TextView
                        android:id="@+id/goldchanging1"
                        style="@style/currencysrowchanging"
                        android:text="%0.08"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goldname2"
                        style="@style/currencysrowheader"
                        android:text="Çeyrek" />
                    <TextView
                        android:id="@+id/goldpurchaseprice2"
                        style="@style/currencysrowprices"
                        android:text="568,85"
                        />
                    <TextView
                        android:id="@+id/goldsaleprice2"
                        style="@style/currencysrowprices"
                        android:text="1.890,20"
                        />
                    <TextView
                        android:id="@+id/goldchanging2"
                        style="@style/currencysrowchanging"
                        android:text="%0.65"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goldname3"
                        style="@style/currencysrowheader"
                        android:text="Cumhriyet" />
                    <TextView
                        android:id="@+id/goldpurchaseprice3"
