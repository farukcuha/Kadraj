<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomepageFragment"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/headers"
                android:text="Yerel Haberler" />
            <TextView
                android:id="@+id/location"
                style="@style/headers"
                android:textSize="25sp"
                android:text=""
                />

           <androidx.cardview.widget.CardView
               android:layout_marginHorizontal="10dp"
               android:layout_width="match_parent"
               android:layout_height="250dp"
               app:cardCornerRadius="10dp">

               <com.smarteist.autoimageslider.SliderView
                   android:id="@+id/localnewsslider"
                   android:layout_width="match_parent"
                   android:layout_height="250dp"
                   app:sliderAnimationDuration="1200"
                   app:sliderAutoCycleDirection="back_and_forth"
                   app:sliderAutoCycleEnabled="true"
                   app:sliderIndicatorAnimationDuration="5000"
                   app:sliderIndicatorGravity="center_horizontal|bottom"
                   app:sliderIndicatorMargin="15dp"
                   app:sliderIndicatorOrientation="horizontal"
                   app:sliderIndicatorPadding="3dp"
                   app:sliderIndicatorRadius="2dp"
                   app:sliderIndicatorSelectedColor="#35495E"
                   app:sliderIndicatorUnselectedColor="#ACACAC"
                   app:sliderScrollTimeInSec="1"
                   app:sliderStartAutoCycle="true"
                   />
           </androidx.cardview.widget.CardView>

            <TextView
                style="@style/headers"
                android:text="Hava Durumu" />

            <TextView
                style="@style/headers"
                android:id="@+id/weatherlocationn"
                android:text="Bozyızı rep taym"
                android:textSize="20sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                >
                <ImageView
                    android:id="@+id/weatherimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints" />

                <ProgressBar
                    android:id="@+id/weatherprogressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/weatherimage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/headers"
                android:text="Hal Fiyatları" />
            <TextView
                style="@style/headers"
                android:id="@+id/lastupdate"
                android:text="Son Güncelleme: 26.01.2021"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp">

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/cucumber"
                        />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Salatalık" />
                    <TextView
                        android:id="@+id/cucumberprice"
                        style="@style/vegetablesprices"
                        android:text="25 ₺"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    >

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/eggplant"
                        />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Patlıcan" />
                    <TextView
                        style="@style/vegetablesprices"
                        android:id="@+id/eggplantprice"
                        android:text="25 ₺"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp">

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/green_beans" />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Fasülye" />
                    <TextView
                        style="@style/vegetablesprices"
                        android:id="@+id/beanprice"
                        android:text="25 ₺"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp">

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/green_chili_pepper"
                        />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Kıl Biber" />
                    <TextView
                        android:id="@+id/pepperprice1"
                        android:text="25 ₺"
                        style="@style/vegetablesprices"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp">

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/green_chili_pepper__1_" />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Sivri Biber" />
                    <TextView
                        android:id="@+id/pepperprice2"
                        android:text="25 ₺"
                        style="@style/vegetablesprices"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp">

                    <ImageView
                        style="@style/vegetablesimage"
                        android:src="@drawable/tomato" />
                    <TextView
                        style="@style/vegetablestext"
                        android:text="Domates" />
                    <TextView
                        android:id="@+id/tomatoprice"
                        android:text="25 ₺"
                        style="@style/vegetablesprices"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/headers"
                android:text="Covid19 Tablosu" />
