                        android:text="%48,65"
                        />

                </LinearLayout>

                <TextView
                    style="@style/headers"
                    android:text="Döviz"
                    android:textSize="25sp"
                    android:layout_marginHorizontal="0dp"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currencyname1"
                        style="@style/currencysrowheader"
                        android:text="Dolar" />

                    <TextView
                        android:id="@+id/currencypurchaseprice1"
                        style="@style/currencysrowprices"
                        android:text="407,85"
                        />
                    <TextView
                        android:id="@+id/currencysaleprice1"
                        style="@style/currencysrowprices"
                        android:text="1.350,20"
                        />
                    <TextView
                        android:id="@+id/currencychanging1"
                        style="@style/currencysrowchanging"
                        android:text="%0.08"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currencyname2"
                        style="@style/currencysrowheader"
                        android:text="Euro" />
                    <TextView
                        android:id="@+id/currencypurchaseprice2"
                        style="@style/currencysrowprices"
                        android:text="568,85"
                        />
                    <TextView
                        android:id="@+id/currencysaleprice2"
                        style="@style/currencysrowprices"
                        android:text="1.890,20"
                        />
                    <TextView
                        android:id="@+id/currencychanging2"
                        android:text="%0.65"
                        style="@style/currencysrowchanging"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/currencysheader"
                        android:text="Ad"
                        />

